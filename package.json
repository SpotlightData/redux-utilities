{
  "name": "redux-utilities",
  "version": "1.0.0",
  "description": "Utility set for redux",
  "main": "dist/index.js",
  "scripts": {
    "test": "cross-env BABEL_ENV=commonjs jest",
    "test:watch": "npm test -- --watch",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -o dist/redux-utilities.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -o dist/redux-utilities.min.js",
    "build": "npm run build:umd && npm run build:umd:min",
    "lint": "eslint src/** --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SpotlightData/redux-utilities.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SpotlightData/redux-utilities/issues"
  },
  "homepage": "https://github.com/SpotlightData/redux-utilities#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "cross-env": "^5.1.3",
    "rollup": "^0.55.3",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "dependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.16.0",
    "hoist-non-react-statics": "^2.3.1",
    "jest": "^22.1.4",
    "react": "^16.2.0",
    "yup": "^0.24.0"
  },
  "jest": {
    "testRegex": "(/tests/.*\\.test.js)$"
  }
}
